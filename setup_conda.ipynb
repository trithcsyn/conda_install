    "import subprocess\n",
    "\n",
    "def run(cmd: str) -> int:\n",
    "    \"\"\"\n",
    "    Run a command string inside an interactive bash shell.\n",
    "    Returns the exit code.\n",
    "    \"\"\"\n",
    "    result = subprocess.run(\n",
    "        [\"bash\", \"-i\", \"-c\", cmd],\n",
    "        check=False\n",
    "    )\n",
    "    return result.returncode"
   ]
  }
